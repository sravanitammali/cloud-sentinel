# ===========================================
# CLOUD SENTINEL - DevSecOps Configuration
# ===========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# -------------------------------------------
# AWS Configuration
# -------------------------------------------
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=ap-south-1

# -------------------------------------------
# EC2 Configuration
# -------------------------------------------
EC2_KEY_PAIR_NAME=cloud-sentinel-key
EC2_INSTANCE_TYPE=t2.micro
# Ubuntu 22.04 LTS AMI for ap-south-1 (Mumbai)
EC2_AMI_ID=ami-0f5ee92e2d63afc18

# -------------------------------------------
# GitHub Configuration
# -------------------------------------------
GITHUB_REPO_URL=https://github.com/yourusername/cloud-sentinel
GITHUB_TOKEN=ghp_your_github_token_here
GITHUB_USERNAME=your_github_username

# -------------------------------------------
# Project Configuration
# -------------------------------------------
PROJECT_NAME=cloud-sentinel
ENVIRONMENT=dev

# -------------------------------------------
# Author Information
# -------------------------------------------
AUTHOR_NAME=Your Name
AUTHOR_EMAIL=your.email@example.com

# -------------------------------------------
# Alert Configuration (Phase 2)
# -------------------------------------------
ALERT_EMAIL=your.email@example.com
# SNS_TOPIC_ARN=arn:aws:sns:ap-south-1:123456789:cloud-sentinel-alerts

# -------------------------------------------
# Database Configuration
# -------------------------------------------
SQLITE_DB_PATH=./data/scan_results.db
